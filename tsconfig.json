{
    "compilerOptions": {
        "jsx": "react-jsx",
        "typeRoots": [
            "node_modules/@types",
        ],
        "types": [
            "node"
        ],
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2018",
        "lib": ["dom"],
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitReturns": true,
        "strict": true
    },
    "include": [
        "index.ts",
        "config/env.ts",
        "test",
        "types/types.d.ts"
    ],
    "exclude": [
        "coverage/**/*",
        "dev/**/*",
        "deploy/**/*"
    ]
}